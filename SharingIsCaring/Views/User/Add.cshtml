@model SharingIsCaring.ViewModels.AddUserViewModel

@{
}

<h2>Create Your Profile</h2>

<form asp-controller="User" asp-action="Add" method="post">
    <div class="form-group">
        <label>Username</label>
        <input asp-for="@Model.Username" />
        <span asp-validation-for="@Model.Username"></span>
    </div>
    <div class="form-group">
        <label>Email Address</label>
        <input asp-for="@Model.Email" />
        <span asp-validation-for="@Model.Email"></span>
    </div>
    <input type="submit" value="Submit" />
</form>