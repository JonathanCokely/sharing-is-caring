@model SharingIsCaring.ViewModels.AddAssetViewModel

@{
}

<h2>Add an Asset</h2>

<form asp-controller="User" asp-action="Add" method="post">
    <div class="form-group">
        <label>Description</label>
        <input asp-for="@Model.Description" />
        <span asp-validation-for="@Model.Description"></span>
    </div>
    <div class="form-group">
        <label>Brand Name</label>
        <input asp-for="@Model.BrandName" />
        <span asp-validation-for="@Model.BrandName"></span>
    </div>
    <input type="submit" value="Submit" />
</form>