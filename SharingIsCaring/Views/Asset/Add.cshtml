@model SharingIsCaring.ViewModels.AddAssetViewModel

<h2>Add an Asset</h2>

<form asp-controller="Asset" asp-action="ProcessAddAssetForm" method="post">
    <div class="form-group">
        <label><strong>Brand Name</strong></label>
        <select class="form-control" style="max-width: 500px" asp-for="@Model.BrandId" asp-items="Model.BrandList"></select>
         <a asp-controller="Brand" asp-action="Add">Add a brand</a>
        <span asp-validation-for="@Model.BrandId"></span>
    </div>
    <div class="form-group">
        <label><strong>Description</strong></label>
        <input class="form-control" style="max-width:500px" asp-for="@Model.Description" />
        <span asp-validation-for="@Model.Description"></span>
    </div>
    <div class="form-group">
        <label><strong>Asset Type</strong></label>
        <select class="form-control" style="max-width:500px" asp-for="@Model.ItemTypeId" asp-items="Model.AssetTypeList"></select>
        <a asp-controller="AssetType" asp-action="Add">Add an asset type</a>
    </div>
    <div class="form-group">
        <label><strong>Serial Number</strong></label>
        <input class="form-control" style="max-width:500px" asp-for="@Model.SerialNumber" />
        <span asp-validation-for="@Model.SerialNumber"></span>
    </div>
    <input type="submit"/>
</form>